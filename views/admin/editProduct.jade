extends admin

block details

    .center-login
        h1 Editar alumno
        form(id='editProduct', action='/admin/products/' + product.ProductID + '/edit', method='POST')
            .txt_field
                input(type='text', id='name', name='name', value=product.ProductName, required=true)
                span
                label Nombre completo 
            .radio_field
                span
                label Grupo
                select(id='category', name='category')
                    each category in categories
                        if category.CategoryID == product.CategoryID
                            option(value=category.CategoryID, selected)= category.CategoryName
                        else
                            option(value=category.CategoryID)= category.CategoryName
            
            .radio_field
                span
                label Padre 1
                select(id='padre1', name='padre1')
                    each padre in padres
                        option(value=padre.PadreNombre)= padre.PadreNombre
            .radio_field
                span
                label Padre 2
                select(id='padre2', name='padre2')
                    each padre in padres
                        option(value=padre.PadreNombre)= padre.PadreNombre
            .radio_field
                span
                label Padre 3
                select(id='padre3', name='padre3')
                    each padre in padres
                        option(value=padre.PadreNombre)= padre.PadreNombre  
            

            br
            input(type='submit', value='Actualizar producto')
            br
            br
    br
    br
