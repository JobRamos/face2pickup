extends layout

block content
    section#form
        //form

        .container
                    if checkOutNoti
                            if (signUpError != '')
                                p=signUpError
                            else
                                p=checkOutNoti
                        else
                            if (signUpError != '')
                                p=signUpError
                    .center-login
                        h1 Regístro Face 2 Pick Up

                        form(id='sign-up', action='/sign-up', method='POST')
                            .txt_field
                                input(type='text', name='fullName', required=true)
                                span
                                label Nombre completo
                            .txt_field
                                input(type='email', name='email', required=true)
                                span
                                label Correo electronico
                            .txt_field
                                input(type='text', name='phone', required=true)
                                span
                                label Celular
                            .txt_field
                                input(type='text', name='username', required=true)
                                span
                                label Usuario
                            .txt_field
                                input(type='password', required=true , name='password')
                                span
                                label Contraseña
                            .txt_field
                                input(type='password', required=true , name='rePassword')
                                span
                                label Confirmar Contraseña
                            input(type='submit', value='Regístrate')
                            .signup_link
                                | ¿Ya tienes una cuenta? 
                                a(href='/sign-in') Inicia Sesión en Face 2 Pick Up
                                br
                                br


