extends info

block details

    h2 Alumnos inscritos en el grupo

    table.content-table
        thead
            tr
                td Nombre completo
                td Padre 1
                td Padre 2
                td Padre 3
                td Grupo

        tbody
            if (orders < 1)
                tr
                    td
                    td(colspan="3", style="text-align: center;")
                        p= "No se encontraron alumnos inscritos en tu grupo"
            else
                each order in orders
                    tr
                        td= order.ProductName
                        td= order.padre1
                        td= order.padre2
                        td= order.padre3
                        td= order.CategoryName