    body
        //header
        header#header
               
            //header_top
            .header_top
                .container
                    .row
                        .col-sm-6
                            a(href='/')
                                img(src='/img/logo-3.png', alt='Face 2 Pick Up Logo')
                                
                        .col-sm-6
                            .shop-menu.pull-right
                                ul.nav.navbar-nav
                                    
                                    -var orderCus = 'Iniciar Sesi√≥n'
                                    -var link = '/sign-in'
                                    if customer
                                        -orderCus=customer.FullName
                                        -link='/usr/'
                                    li
                                        a(href=link)
                                            i.fa.fa-user
                                            =orderCus
                                    
                                    if customer
                                        li
                                            a(href='/sign-out')
                                                i.fa.fa-sign-out
                                                |  Logout
            ///header_top

            ///header-bottom
        ///header

        block content

