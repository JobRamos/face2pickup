doctype html
html
    head
        //metadata
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(name='description', content='Iocus')
        meta(name='author', content='Iocus. Todos los Derechos Reservados')
        //title
        title=  'Iocus | ' + title
        //stylesheet
        link(rel='stylesheet', href='/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/font-awesome.min.css')
        link(rel='stylesheet', href='/css/main.css')
        //favicon
        link(rel='shortcut icon', href='/img/iocus-5.png')
        link(rel='apple-touch-icon-precomposed', sizes='144x144', href='/img/ico/apple-touch-icon-144-precomposed.png')
        link(rel='apple-touch-icon-precomposed', sizes='114x114', href='/img/ico/apple-touch-icon-114-precomposed.png')
        link(rel='apple-touch-icon-precomposed', sizes='72x72', href='/img/ico/apple-touch-icon-72-precomposed.png')
        link(rel='apple-touch-icon-precomposed', href='/img/ico/apple-touch-icon-57-precomposed.png')
    body
        //header
        header#header
               
            //header_top
            .header_top
                .container
                    .row
                        .col-sm-6
                            a(href='/')
                                    img(src='/img/iocus-5.png', alt='Iocus Logo')
                                
                        .col-sm-6
                            .shop-menu.pull-right
                                ul.nav.navbar-nav
                                    li
                                        a(href='/wishlist')
                                            i.fa.fa-heart
                                            |  Lista de Deseos
                                    -var orderCus = 'Iniciar Sesión'
                                    -var link = '/sign-in'
                                    if customer
                                        -orderCus=customer.FullName
                                        -link='/usr/'
                                    li
                                        a(href=link)
                                            i.fa.fa-user
                                            =orderCus
                                    li
                                        a(href='/cart')
                                            i.fa.fa-shopping-cart
                                            |  Carrito
                                    //li
                                    //    a(href='/checkout')
                                    //        i.fa.fa-money
                                    //        |  Checkout
                                    if customer
                                        li
                                            a(href='/sign-out')
                                                i.fa.fa-sign-out
                                                |  Logout
            ///header_top


            .headerxd
                a(href='/')
                    img(src='/img/iocus-8.png', alt='Iocus Logo')

                .header-center
                    form(id='sign-in', action='/cat/buscar', method='POST')
                        input.search-input(type='text', name='buscador', value=buscador, placeholder='Buscar', style="color: black;", class="searchTerm")
                        button(type='submit', class="searchButton")
                            i.fa.fa-search

                .header-right
                    a.active(class={active: currentUrl === '/'}, href='/') Inicio
                    a(class={active: currentUrl === '/cat/all'}, href='/cat/all') Productos
                    a(class={active: currentUrl === '/contact-us'}, href='/contact-us') Contacto


            ///header-bottom
        ///header

        block content

